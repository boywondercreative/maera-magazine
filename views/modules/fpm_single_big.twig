{% set fpm_top_cat = theme.theme_mod('fpm_top_cat', 'all') %}
{% if fpm_top_cat != 'all' %}
	{% set term = TimberTerm((fpm_top_cat)) %}
{% endif %}

{% set count = 0 %}
{% if fpm_top_cat != 'all' %}
	<div class="top module single cat">
		{% for post in term.get_posts('numberposts=1') %}
			<a class="featured-image" href="{{ post.link }}"><img src="{{ post.get_thumbnail.get_src|resize(1440, 890) }}"></a>
			<div class="content">
				<h2 class="title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
				{{ post.get_preview(90, false, '', true) }}
			</div>
		{% endfor %}
	</div>
{% else %}
	<div class="top module single">
		{% for post in posts %}
			{% if count < 1 %}
				{% set count = count + 1 %}
				<a class="featured-image" href="{{ post.link }}"><img src="{{ post.get_thumbnail.get_src|resize(1440, 890) }}"></a>
				<div class="content">
					<h2 class="title"><a href="{{ post.link }}">{{ post.title }}</a></h2>
					{{ post.get_preview(90, false, '', true) }}
				</div>
			{% endif %}
		{% endfor %}
	</div>
{% endif %}
<div class="clearfix"></div>
