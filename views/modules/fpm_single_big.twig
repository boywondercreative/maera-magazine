{{ widget.before_widget }}
{% if widget.title %}
	{{ widget.before_title }}
	{{ widget.title }}
	{{ widget.after_title }}
{% endif %}
<div class="top module single">
	{% for post in posts %}
		<div class="[maera_grid_row_class]">
			<div class="[maera_grid_col_6]">
				<a class="featured-image" href="{{ post.link }}"><img src="{{ post.get_thumbnail.get_src|resize(1440, 890) }}"></a>
			</div>
			<div class="content [maera_grid_col_6]">
				<h3 class="title"><a href="{{ post.link }}">{{ post.title }}</a></h3>
				{{ post.get_preview(60, false, '', true) }}
			</div>
		</div>
	{% endfor %}
</div>
<div class="clearfix"></div>
{{ widget.after_widget }}
